<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 1. 城市切换栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_beijing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:padding="8dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tv_shanghai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海"
            android:padding="8dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tv_guangzhou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州"
            android:padding="8dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tv_shenzhen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="深圳"
            android:padding="8dp"
            android:textSize="16sp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- 2. 实时天气区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_live_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="晴"
            android:textSize="20sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_live_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25°"
            android:textSize="36sp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_live_wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="南风1-2级"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- 3. 未来预报区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未来预报"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:id="@+id/ll_forecast_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"/>

</LinearLayout>